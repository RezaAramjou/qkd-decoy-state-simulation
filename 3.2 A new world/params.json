{
  "num_bits": 10000000,
  "photon_number_cap": 10,
  "batch_size": 500000,
  "num_workers": 4,
  "force_sequential": false,
  "f_error_correction": 1.16,
  "eps_sec": 1e-9, "eps_cor": 1e-15, "eps_pe": 1e-10, "eps_smooth": 1e-10,
  "security_proof": "lim-2014",
  "ci_method": "clopper-pearson",
  "enforce_monotonicity": true,
  "assume_phase_equals_bit_error": true,
  "lp_solver_method": "highs",

  "protocol_name": "bb84-decoy",
  "protocol_config": {
    "alice_z_basis_prob": 0.5,
    "bob_z_basis_prob": 0.5
  },
  "source_type": "poisson",
  "source_config": {
    "pulse_configs": [
      {"name": "signal", "mean_photon_number": 0.5, "probability": 0.8},
      {"name": "decoy", "mean_photon_number": 0.1, "probability": 0.1},
      {"name": "vacuum", "mean_photon_number": 0.0, "probability": 0.1}
    ]
  },
  "channel_type": "fiber",
  "channel_config": {
    "distance_km": 50.0,
    "fiber_loss_db_km": 0.2
  },
  "detector_type": "threshold",
  "detector_config": {
    "det_eff": 0.2,
    "dark_rate": 1e-7,
    "qber_intrinsic": 0.001,
    "misalignment": 0.01,
    "double_click_policy": "discard"
  }
}